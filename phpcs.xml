<?xml version="1.0"?>
<ruleset>
	<rule ref="vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="MediaWiki.Usage.SuperGlobalsUsage.SuperGlobals" />
	</rule>
	<file>.</file>
	<arg name="bootstrap" value="./vendor/mediawiki/mediawiki-codesniffer/utils/bootstrap-ci.php"/>
	<arg name="encoding" value="utf8"/>
	<arg name="extensions" value="php,php5,inc,sample"/>
	<rule ref="Generic.Files.LineLength.TooLong">
		<severity>0</severity>
	</rule>
	<rule ref="Generic.PHP.NoSilencedErrors.Discouraged">
		<severity>0</severity>
	</rule>
	<rule ref="MediaWiki.NamingConventions.ValidGlobalName">
		<properties>
			<property name="ignoreList" type="array" value="$IP" />
			<property name="allowedPrefixes" type="array" value="wg,wmg" />
		</properties>
	</rule>
	<rule ref="MediaWiki.NamingConventions.PrefixedGlobalFunctions">
		<properties>
			<property name="allowedPrefixes" type="array" value="wg,wmf" />
		</properties>
	</rule>
	<rule ref="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.NewLineComment">
		<!-- TODO enable and fix everywhere, T171115 -->
		<exclude-pattern>wmf-config/CommonSettings\.php</exclude-pattern>
		<exclude-pattern>wmf-config/InitialiseSettings\.php</exclude-pattern>
		<exclude-pattern>wmf-config/InitialiseSettings-labs\.php</exclude-pattern>
		<exclude-pattern>wmf-config/ProductionServices\.php</exclude-pattern>
		<exclude-pattern>wmf-config/abusefilter\.php</exclude-pattern>
		<exclude-pattern>wmf-config/ext-ORES\.php</exclude-pattern>
		<exclude-pattern>wmf-config/filebackend\.php</exclude-pattern>
		<exclude-pattern>wmf-config/flaggedrevs\.php</exclude-pattern>
		<exclude-pattern>wmf-config/reverse-proxy\.php</exclude-pattern>
		<exclude-pattern>wmf-config/logos\.php</exclude-pattern>
	</rule>

	<exclude-pattern>\.git/</exclude-pattern>
	<exclude-pattern>vendor/</exclude-pattern>
	<exclude-pattern>*/portals/*</exclude-pattern>
	<!-- Auto generated files -->
	<exclude-pattern>wmf-config/interwiki\.php</exclude-pattern>
</ruleset>
